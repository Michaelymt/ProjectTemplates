<div id='content'>
    <div id='jqxWidget' style='vertical-align: middle; text-align: center; background: #eee;
            height: 400px; width: 400px;'>
        <div id='jqxMenu'>
            <ul>
                <li><a href="#">Home</a></li>
                <li>
                    <a href="#">Examples</a>
                    <ul>
                        <li>@Html.ActionLink("Orders", "Index", "Orders")</li>
