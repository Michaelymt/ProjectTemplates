<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Custom="http://schemas.microsoft.com/wpf/2008/toolkit" x:Class="WpfXamlDemo.VerClases"
        Title="VerClases" Height="300" Width="391.488" WindowStartupLocation="CenterScreen">
    <Grid>
        <Custom:DataGrid Name="VerClasesGrid" AutoGenerateColumns="False" Background="White" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Height="180" Width="336">
            <Custom:DataGrid.Columns>
                <Custom:DataGridTextColumn Header="ID" Width="45" Binding="{Binding Path=ClaseID}" />
                <Custom:DataGridTextColumn Header="Materia" Width="65" Binding="{Binding Path=NombreDeMateria}" />
                <Custom:DataGridTextColumn Header="Descripcion" Width="150" Binding="{Binding Path=DescripcionDeMateria}" />
                <Custom:DataGridTextColumn Header="Creditos" Width="65" Binding="{Binding Path=CreditosHoras}" />                
            </Custom:DataGrid.Columns>
        </Custom:DataGrid>
        <Button Content="VerClases" HorizontalAlignment="Left" Margin="64,217,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" RenderTransformOrigin="1.907,0.566"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="228,217,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
    </Grid>
</Window>
